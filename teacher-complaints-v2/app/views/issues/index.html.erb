<p id="notice"><%= notice %></p>

<h1 class="h1">Issues</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.category %></td>
        <td><%= issue.note %></td>
        <td><button><%= link_to 'Show', issue %></button></td>
        <td><button><%= link_to 'Edit', edit_issue_path(issue) %></button></td>
        <td><button><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
