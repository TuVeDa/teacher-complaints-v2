<div id="login-container" >
  <div class="panel panel-default">
    <div class="panel-body">
      <% if flash[:notice] %>
        <div class="notice row"><%= flash[:notice] %></div>
      <% end %>
      <div class="row">
        <h1 class="col-sm-12 h2-maroon">Log In Page</h1>
      </div>
      <div class="row">
        <%= form_tag authenticate_path, method: "POST", class: "row", id: "loginForm" do %>

          <div class="form-group loginInput">
            <label for="userName">User Name</label>
            <%= text_field_tag "name", nil, class: "form-control", placeholder: "Bilbo Baggins",  id: 'userName' %>
          </div>

          <div class="form-group loginInput">
            <label for="password">Password</label>
            <%= password_field_tag 'password', nil, class: "form-control", placeholder: "p@s$w0rd" %>
          </div>

          <%= submit_tag "SUBMIT", class: "submitButton" %>


        <% end %>
      </div>
    </div>
  </div>
</div>
